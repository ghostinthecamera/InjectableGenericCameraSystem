<UserControl x:Class="IGCSClient.Controls.FolderInputWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IGCSClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<HeaderedContentControl Header="" Name="_headerControl">
		<DockPanel>
			<Button HorizontalAlignment="Right" DockPanel.Dock="Right" Name="_browseForFolderButton" Width="80" Click="_browseForFolderButton_OnClick">Browse...</Button>
			<TextBox Name="_folderTextBox" IsReadOnly="true" TextChanged="_folderTextBox_OnTextChanged"/>
		</DockPanel>
	</HeaderedContentControl>
</UserControl>
